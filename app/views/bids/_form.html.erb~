<%= form_for @bid do |f| %>
  <% if @bid.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@bid.errors.count, "error") %> prohibited
      this bid from being saved:</h2>
    <ul>
    <% @bid.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

 <p>
    <%= f.label :your_name %><br>
    <%= f.text_field :maker%>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :maker_phone %>
  </p>
 
  <p>
    <%= f.label :auction_ID %><br>
    <%= f.text_field :auction_id %>
  </p>
  
  <p>
    <%= f.label :auction_end %><br>
    <%= f.datetime_select :auction_end, {:order => [:month, :day, :year, :hour, :minute],:prompt => true, :start_year => Time.now.year, :end_year => 2014} %>
  </p>
  
   <p>
    <%= f.label :your_max_bid%><br>
    <%= f.text_field :bid_threshold %>
  </p>
  
  <p>
    <%= f.label :your_plan_for_the_property %><br>
    <%= f.text_area :plan %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  
<% end %>
